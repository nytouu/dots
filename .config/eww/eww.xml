<!-- The main eww configuration file. This is where your widgets and how they appear on the screen and what they
contain are defined. -->

<eww>
    <definitions>
    <!-- This is the place where you structure your widgets, align them and stuff. -->
        <def name="hub">
            <box orientation="v" space-evenly="false" spacing="20" valign="start" class="hub">
                <locale/>
                <separator/>
            </box>
        </def>

        <def name="separator">
            <scale halign="fill" class="separator" active="false" value="1" max="1"/>
        </def>

        <def name="locale">
            <box height="100" orientation="v" space-evenly="false" valign="start" spacing="10" halign="center" class="locale">
                <button halign="fill" class="time" onclick="">{{time}}</button>
                <button halign="fill" class="date" onclick="">{{date}}</button>
                <button halign="fill" class="date" onclick="">{{year}}</button>
            </box>
        </def>
    </definitions>

    <variables>

        <!-- Music vars -->
        <!-- These are your variables. Like they say, they run a script, and then output that to the variable. In
        the following var, we get music info from playerctl. -->

        <script-var name="music" interval="5s">echo yes</script-var>

        <script-var name="volume" interval="16ms">~/.config/eww/scripts/getvol</script-var>

        <!--Date vars-->
        <script-var name="date" interval="10m">date "+%A, %d %B"</script-var>
        <script-var name="time" interval="1m">date "+%H:%M"</script-var>
        <script-var name="year" interval="10h">date "+%Y"</script-var>

    </variables>

    <windows>
        <!-- These are the windows -->
        <window name="hub" screen="0">
            <geometry x="0%" y="0%" width="100%" height="4%"/> <!--Specifies geometry-->
            <reserve side="top" distance="4%"/>
            <widget>
                <hub/> <!--This is the def we created earlier-->
            </widget>
        </window>
    </windows>
</eww>
