set notification-fg             "#c0caf5" # Foreground

set completion-bg               "#24283b" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#24283b" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#414868" # Selection
set completion-highlight-fg     "#c0caf5" # Foreground

set index-bg                    "#24283b" # Background
set index-fg                    "#c0caf5" # Foreground
set index-active-bg             "#414868" # Current Line
