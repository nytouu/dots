#!/bin/sh

# Prints the current volume or ğŸ”‡ if muted.

case $BLOCK_BUTTON in
	2) pamixer -t ;;
	3) setsid -f "$TERMINAL" -e pulsemixer ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
esac

[ $(pamixer --get-mute) = true ] && echo " î" && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="î‹"
elif [ "$vol" -lt "30" ]; then
	icon="î‰"
else
	icon="îŠ"
fi

echo " $icon$vol%"
